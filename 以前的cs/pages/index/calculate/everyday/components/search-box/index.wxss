.search-box-wraper {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  color: rgba(16, 24, 32, 0.6);
  background-color: rgba(0, 0, 0, 0.5);
}

.search-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 32rpx;
  width: 100%;
  height: 62%;
  background-color: #fff;
}

.search-box .title {
  padding: 40rpx 0;
  color: #101820;
}

.search-box .input-wraper {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #cfd1d3;
}

.search-box .input-wraper .address {
  position: relative;
  flex: 1;
  margin-left: 20rpx;
}

.input-wraper .address .label {
  position: absolute;
  top: 0;
  transition: all .2s;
}

.input-wraper .address .input {
  color: #101820;
}

.search-box .tips {
  padding-top: 16rpx;
}

.search-btn {
  margin-top: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  padding-left: 48rpx;
  background-color: #101820;
}

@keyframes zoomIn {
  from {
    opacity: 0;
    transform: scale3d(0.3, 0.3, 0.3);
  }

  50% {
    opacity: 1;
  }
}
.animate__animated {
  animation-duration: .3s;
  animation-fill-mode: both;
}
.animate__zoomIn {
  animation-name: zoomIn;
}