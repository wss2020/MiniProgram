/*使屏幕变暗 */
.commodity_screen1 {width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: #000;opacity: 0.5;overflow: hidden;z-index: 1000;}
/*对话框 */
.commodity_attr_box1 {height: 100%;width: 750rpx;position: fixed;top: 100rpx;left: 0;z-index: 2000;overflow: hidden;display: flex;flex-direction: column;}
.newcomer_coupon1 image{margin-left: 95rpx;width: 560rpx;height: 682rpx;}
.newcomer_coupon2 image{margin-top: 8rpx;width: 300rpx;height: 80rpx;}
.newcomer_coupon3 image{margin-top: 20rpx;margin-left: 325rpx;width: 100rpx;height: 106rpx;}

/* 去除button默认样式 */
button::after {border: none;}
button {background-color: transparent;padding-left: 0;padding-right: 0;line-height:inherit;}
button {border-radius:0;}
input{outline:none;border:none;list-style: none;}
.bottom_cancels .button-hover {color:#d89b3a;background-color:transparent;}





/*首页弹框*/
.qixiindex{width: 600rpx;margin:0 0 0 75rpx;}
.qixiindex1{width: 300rpx;margin:20rpx 0 0 225rpx;}
.qixibutton{height: 100rpx;}
.qixibutton image{width:80rpx;margin-top:20rpx;}
.qixibutton button{height: 100rpx;}
.one_reward_bg {width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: #000;opacity: 0.8;overflow: hidden;z-index: 1000;}
.one_reward_content_index {height: 100%;width: 750rpx;position: fixed;top: 80rpx;left: 0;z-index: 2000;overflow: hidden;display: flex;flex-direction: column;}

