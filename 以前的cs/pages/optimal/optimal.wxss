/* pages/optimal/optimal.wxss */
page{background: #f3f5f6;}

.deletetop{
    position:fixed;top:0;left: 0;z-index:100;
    display: flex;flex-direction: row;width:100%;
    background: #f3f5f6;
}
.deletetop1{
    display: flex;flex-direction: row;width:100%;justify-content: flex-end;
    font-size: 32rpx;padding: 0 38rpx;margin: 20rpx 0 20rpx;
}
.delbtn{
    position:fixed;bottom:0;left: 0;z-index:100; height: 100rpx;
    display: flex;flex-direction: row;width:100%;justify-content: center;align-items: center;
    background: #f3f5f6;
}
.delbtn1{
    width:700rpx;height:70rpx;
    font-size: 32rpx;color:#ffffff;background:#c60c0c;border-radius: 200rpx;
    display: flex;flex-direction: row;justify-content: center;align-items: center;
}


.products{display:flex;flex-direction: column;margin-bottom: 60rpx;}

.product{display: flex;flex-direction: row;padding:20rpx 0 20rpx 0;background: #ffffff; margin:20rpx 20rpx 0rpx 20rpx;border-radius:8rpx;}
.product .img{width:240rpx;height:240rpx;margin:0 30rpx 0 20rpx;}
.product .info{display:flex;flex-direction:column;width:400rpx;}
.product .name{
    margin-top: 20rpx; font-size:30rpx;width:400rpx;height:84rpx;
    word-break:break-all;text-overflow:-o-ellipsis-lastline;overflow:hidden;text-overflow:ellipsis;
    display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;
}
.product .info{disply:flex;flex-direction: column;}
.product .addinfo{display:flex;flex-direction: row;justify-content: space-between;align-items: center;}
.product .addinfo  .number{font-size: 28rpx;color:#777777;}
.product .addinfo  .addinfo2{font-size: 24rpx;color:#777777;width:200rpx;display:flex;flex-direction: row;justify-content: flex-end;align-items: center;}
.product .addinfo  .addinfo2 image{width: 30rpx;margin-right: 10rpx;height:24rpx;}
.product .addinfo  .addinfo2 .addinfo2_1{background: #ffeedb;border-radius: 200rpx;width:60rpx;text-align: center;margin-right: 10rpx;}
.product .addinfo  .addinfo2 .addinfo2_2{background: #ffeedb;border-radius: 200rpx;width:120rpx;text-align: center;}

.product .addinfo1{display:flex;flex-direction: column;justify-content: space-between;align-items: baseline;margin-top: 0rpx;}


.product  .price{font-size:34rpx;height:32rpx;color:#e33d3d;}
.product  .oprice{color:#777777;font-size:22rpx;text-decoration: line-through;margin-left: 6rpx;}

.product  .dprice{font-size:28rpx;height:32rpx;color:#e33d3d;margin-left: 40rpx;}
.product  .buynums{display: flex;align-items: center;justify-content: space-between;width: 100%; margin-top: 10rpx;}
.product  .range{color:#777777;font-size:26rpx;}
.product  .range text{background: #ffeedb;border-radius: 200rpx;width: 60rpx;text-align: center;
    margin-left: 10rpx; font-size: 22rpx;padding:2rpx 10rpx;}

.option{display:flex;flex-direction: row;justify-content: flex-end;margin-top: 20rpx;}
.option_1{display: flex;flex-direction: row;}
.option1{
    margin-left: 20rpx;
    padding: 6rpx 30rpx;
    border: solid 1px #999999;
    border-radius: 200px;
    font-size: 26rpx;
}
.option2{
    margin-left: 20rpx;
    padding: 6rpx 30rpx;
    border: solid 1px #c60c0c;
    border-radius: 200px;
    font-size: 26rpx;
    color: #ffffff;
    background: #c60c0c;
}
.option3{
    margin-left: 20rpx;
    padding: 6rpx 30rpx;
    border: solid 1px #999999;
    border-radius: 200px;
    font-size: 26rpx;
    color: #ffffff;
    background: #999999;
}

.choose{margin-left: 20rpx;}

/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border-color:#c60c0c;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 40rpx;height: 40rpx;line-height: 40rpx;text-align: center;font-size: 22rpx;color: #c60c0c;
    background: transparent;transform: translate(-50%, -50%) scale(1);-webkit-transform: translate(-50%, -50%) scale(1);}


.unpro{display:flex;flex-direction: column}
.unpro1{display:flex;justify-content:center;}
.unpro1 image{width:260rpx;height:260rpx;}
.unpro2{font-size: 32rpx;text-align:center;margin-top:40rpx;}
.unpro3{display:flex;justify-content:center;align-items:center;width:100%;}
