/* pages/auth/login/tellogin/tellogin.wxss */
.noviceguidemain{width: 100%;height: 100%;background: #fff;display: flex;flex-direction: column;}
.logo{display: flex;justify-content: center;margin-top: 180rpx;}
.logo image{width:170rpx;height:170rpx;}
.topwords{padding: 30rpx 0 50rpx;font-size: 32rpx;display: flex;justify-content: center;}




.padding{margin-top: 30rpx;}
.onnoviceguidemain{
    width:80%;height:80rpx;border-radius: 200rpx;
    font-size: 30rpx;color: #fff;background:#e33d3d;
    padding:0rpx 5%;
    display:flex;flex-direction:row;justify-content:center;align-items: center;
}
.noauth{margin-top: 40rpx;font-size: 28rpx;text-align: center;}


/*选择注册/绑定账号*/
.info_check{
    width: 76%;
    height:382rpx;
    position:fixed;
    top:250rpx;
    left: 12%;
    z-index: 2000;
    background:#fff;
    border-radius:10rpx;
}
.commodity_screen{
    width: 100%;
    height:100%;
    position:fixed;
    top:0;
    left:0;
    background:#000;
    opacity:0.5;
    overflow:hidden;
    z-index:1000;
}
.info_title{
    text-align: center;
    font-size: 36rpx;
    line-height: 118rpx;
}
.ranges{
    display: flex;
    flex-direction:column;
    justify-content:left;
    font-size:30rpx;
    margin-left:50rpx;
    margin-right:50rpx;
    height: 182rpx;
    color: #999;
    overflow: auto;
}
.twobtn{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
}
.twobtn .leftbtn{
    width: 50%;
    font-size: 30rpx;
    text-align:center;
    line-height: 70rpx;
    border:solid 1px #f4f4f4;
    border-bottom-left-radius:10rpx;
}
.twobtn .rightbtn{
    width: 50%;
    font-size: 30rpx;
    text-align:center;
    line-height: 70rpx;
    border:solid 1px #f4f4f4;
    color: rgb(92,111,152);
    border-bottom-right-radius:10rpx;
}
.one_reward_bg {width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: #000;opacity: 0.8;overflow: hidden;z-index: 1000;}
