.img{
    width: 320rpx;
    border-radius: 8rpx;
}
.card{
    background: #fff;
    width:500rpx;
    height: 470rpx;
}
.cardname{
    padding: 20rpx 0 0 20rpx;
    font-size: 28rpx;
    color: #000;
    max-width:440rpx;
    word-break:break-all;
    text-overflow:-o-ellipsis-lastline;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}
.cardimg image{
    margin: 30rpx 0 0 30rpx;
    width: 420rpx;
    height: 334rpx;
}
.showright{
    display: flex;
