.myinfo{display:flex;flex-direction: column;}




.head_my {width: 100%;background: #fff;margin-top: 20rpx;display: flex;flex-direction: column;}
.unauth_head_row1{display: flex;align-items:center;justify-content:center;margin-top:20rpx;}
.unauth_head_row1 image{width:100rpx;height:100rpx;}
.unauth_head_row2{
    border-radius:200rpx;
    width:33%;
    height: 66rpx;
    font-size:30rpx;
    color:#fff;
    background:#e33d3d;
    padding:0rpx 5%;
    margin:20rpx auto 20rpx;
    display:flex;
    flex-direction:row;
    justify-content:center;
    align-items: center;
