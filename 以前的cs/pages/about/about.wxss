.head_row {padding: 25rpx 5% 20rpx 5%;display: flex;flex-direction: row;justify-content: space-between;}
.head_rows{display: flex;flex-direction: row;align-items: center;}
.head_row1 {width: 80rpx;height: 80rpx;line-height: 80rpx;text-align: center;}
.head_row1 image{border: solid 2rpx #fff;border-radius: 12rpx;width: 80rpx;height: 80rpx;}
.head_row2 {margin-left: 20rpx;display: flex;flex-direction: column;justify-content: center;}
.head_name{font-size: 32rpx;color:#000;text-align: center;}
.head_name1{font-size: 32rpx;color:#000;text-align: center;}
.head_name2{font-size: 28rpx;color:#000;}

.head_row3 {display:flex; align-items: center; margin-left: 138rpx;font-size: 28rpx;color: #999999;}
.line{margin-left: 5%;width: 95%;border-bottom: solid 2rpx #f4f4f4;display: flex;flex-direction: row;}
.head_con{padding: 20rpx 5% 20rpx 5%;display: flex;flex-direction: row;justify-content: space-between;}
.line1{width: 2rpx;height: 78rpx;background: #f4f4f4;}
.head_balance{display:flex;flex-direction: column;justify-content: center;align-items: center;font-size: 28rpx;}
.head_balance1{display:flex;flex-direction: row;}
.head_balance2{margin-top: 6rpx;color: #666666;font-size:28rpx;}


.icon_information {display:flex;align-items: center;}
.icon_information image{width:24rpx;height:24rpx;}

.news{background: #fff;margin-top: 20rpx;padding: 30rpx 5%;display: flex;flex-direction: row;justify-content: space-between;align-items: center;}
.news_title{display: flex;font-size: 30rpx;color: #000;}
.news_icon{color: #a9a9a9;font-size: 30rpx;display: flex;}
.news_icon image{width:26rpx;height:26rpx}

.news_icon1{color: #a9a9a9;font-size: 28rpx;display: flex;}
.news_icon1 image{width:26rpx;height:26rpx}
.news_icon1 text{color: #666666;margin-right: 20rpx;}
.news1{border: none;width: 100%;background: #fff;margin-top: 20rpx;padding: 30rpx 5%;display: flex;flex-direction: row;justify-content: space-between;align-items: center;}
.dot{width: 10rpx;height: 10rpx;border-radius: 50%;background: rgb(200,30,30);}

