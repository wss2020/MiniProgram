    </view>
    <view class='rows'>
        <view>昵称</view>
        <view>{{myinfo.nick}}</view>
    </view>
    <view class='rows'>
        <view>性别</view>
        <view>
            <open-data type="userGender" lang="zh_CN"/>
        </view>
    </view>
    <view class='rows'>
        <view>手机号</view>
        <view>{{myinfo.mobile}}</view>
    </view>
    <view class='rows'>
        <view>位置</view>
        <view>
            <open-data type="userCountry" lang="zh_CN"/>
            <open-data type="userProvince" lang="zh_CN"/>
            <open-data type="userCity" lang="zh_CN"/>
        </view>
    </view>
</view>


