/*弹框灰色蒙版*/
.commodity_screen {
    width: 100%;height: 100%;position: fixed;top: 0;left: 0;
    background: #000;opacity: 0.5;overflow: hidden;z-index: 1000;}


/*卡券底部三个按钮*/
.card_foot{
    position: fixed;bottom: 0;left: 0;z-index: 16;
    width: 100%;height: 110rpx;background:#fff;border-top: solid 2rpx #f4f4f4;
    display: flex;flex-direction: row;justify-content: space-around;align-items: center;
}

.card_btn{
    display: flex;flex-direction: column;justify-content: center;align-items: center;
    width: 20%;
}
.card_btn image{width: 60rpx;height:60rpx;}
.card_btn .btncolor{color: #000;font-size: 26rpx;}
.card_btn .btncolor1{color: #c50a18;font-size: 26rpx;}



/*底部两个button*/
.foot {
    position: fixed;bottom: 0;left: 0;
    width: 100%;height: 110rpx;background:#fff;border:solid 2rpx #f5f5f5;
    display: flex;flex-direction: row;justify-content: space-around;align-items: center;
}
.foot_left{width: 44%;}
.foot_left1{
    display:flex;justify-content:center;align-items:center;
    background: #fff;color: #333333;width: 100%;height: 60rpx;font-size: 28rpx;
    border: solid 1px #cccccc;border-radius:200rpx;
}
.foot_right{width: 44%;}
.foot_right1{
    display:flex;justify-content:center;align-items:center;
    color: #fff;background: #e33d3d;border-radius:200rpx;
    width: 100%;height: 60rpx;font-size: 28rpx;border: solid 1px #e33d3d;
}















