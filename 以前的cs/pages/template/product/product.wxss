.product{display: flex;flex-direction: row;padding:20rpx 0 20rpx 0;background: #ffffff; margin:20rpx 20rpx 0rpx 20rpx;border-radius:8rpx;}
.product .img{width:240rpx;height:240rpx;margin:0 30rpx 0 20rpx;}
.product .info{display:flex;flex-direction:column;width:400rpx;}
.product .name{
    margin-top: 20rpx; font-size:30rpx;width:400rpx;height:84rpx;
    word-break:break-all;text-overflow:-o-ellipsis-lastline;overflow:hidden;text-overflow:ellipsis;
    display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;
}
.product .info{disply:flex;flex-direction: column;}
.product .addinfo{display:flex;flex-direction: row;justify-content: space-between;align-items: center;}
.product .addinfo  .number{font-size: 28rpx;color:#777777;}
.product .addinfo  .addinfo2{font-size: 24rpx;color:#777777;width:248rpx;display:flex;flex-direction: row;justify-content: flex-end;align-items: center;}
.product .addinfo  .addinfo2 image{width: 30rpx;margin-right: 10rpx;height:24rpx;}
.product .addinfo  .addinfo2 .addinfo2_1{background: #ffeedb;border-radius: 200rpx;width:60rpx;text-align: center;margin-right: 10rpx;}
.product .addinfo  .addinfo2 .addinfo2_2{background: #ffeedb;border-radius: 200rpx;width:120rpx;text-align: center;}
.product .addinfo1{display:flex;flex-direction: column;justify-content: space-between;align-items: baseline;margin-top: 0rpx;}
.product  .price{font-size:34rpx;height:32rpx;color:#e33d3d;}
.product  .dprice{font-size:28rpx;height:32rpx;color:#e33d3d;margin-left: 40rpx;}
.product  .oprice{color:#777777;font-size:22rpx;text-decoration: line-through;margin-left: 6rpx;}
.product  .buynums{display: flex;align-items: center;justify-content: space-between;width: 100%; margin-top: 10rpx;}
.product  .range{color:#777777;font-size:26rpx;}
.product  .range text{background: #ffeedb;border-radius: 200rpx;width: 60rpx;text-align: center;
                      margin-left: 10rpx; font-size: 22rpx;padding:2rpx 10rpx;}
.product  .addOptimal{ background:#e33d3d;border-radius: 200rpx;width:130rpx;height: 50rpx; font-size:24rpx;color: #ffffff;
                       display:flex;align-items: center;justify-content: center;
                       /*margin-left: 60rpx;*/
}

