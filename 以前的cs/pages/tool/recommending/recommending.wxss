.recom_name{font-size: 32rpx;}
.recom_del{width:40rpx;height:40rpx;}
.addrecom{width:70rpx;height:70rpx;}


.pro_content{display: flex;flex-direction: column;}
.modify_pro{display: flex;flex-direction: column; box-sizing: border-box;
            width:710rpx;height:380rpx; position: relative;
            margin:20rpx 20rpx 0 20rpx; padding:20rpx 0 0 20rpx; border:solid 2rpx #cccccc;border-radius: 12rpx;}
.modify_top{display: flex;flex-direction: row;}
.proimg{width:200rpx;}
.proimg image{width:200rpx;height:200rpx;}
.proinfo{display: flex;flex-direction: column; margin-left: 20rpx;}
.proskuid{font-size: 32rpx;}
.proname{
    width: 380rpx;height: 90rpx;font-size: 32rpx;color: #000;
    word-break: break-all;text-overflow: -o-ellipsis-lastline;overflow: hidden;
    text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.modify_info{display: flex;flex-direction: row;align-items: center; margin-top: 20rpx;}
.modify_price{display: flex;flex-direction: column;align-items: center;}
.modify_price1{font-size: 30rpx;}
.modify_price2{font-size: 28rpx;}
.modify_price3{font-size: 30rpx;color:#c50a18;}
.modify_price4{font-size: 28rpx;color:#c50a18;}
.addline{width:2rpx;height: 108rpx;background: #cccccc;margin:0 20rpx;}
.modify_bottom{font-size: 32rpx;color:#777777; margin:20rpx 0 0 10rpx;}

.company_price{color:#777777;font-size: 30rpx;}

.left_position{position: absolute;top:8rpx;right: 6rpx;z-index: 10;}
.pro_icon{display: flex;justify-content: flex-end;}
.pro_icon image{width:52rpx;height:52rpx;}
.pro_icon1{margin: 120rpx 6rpx 0 0;}
.pro_icon1 image{width:80rpx;height:80rpx;}

.addpro{margin-top: 100rpx;display: flex;justify-content: center;}
.addpro image{width: 700rpx;}

.recommend_btn{
    width: 60rpx;
    margin-left: 20rpx;
    padding: 6rpx 30rpx;
    border: solid 1px #c60c0c;
    border-radius: 200px;
    font-size: 26rpx;
    color: #ffffff;
    background: #c60c0c;
}


.modify_btn {
    width: 137rpx;
