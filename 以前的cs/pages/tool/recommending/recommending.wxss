}
.flex-row{
    display: flex;
    flex-direction: row;
}

.flex-colunmn{
    display: flex;
    flex-direction: column;
}

.limit{
    font-size: 30rpx;
    color: #000;
    width: 380rpx;
    height: 46rpx;
    word-break: break-all;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
