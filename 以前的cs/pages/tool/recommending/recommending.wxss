@import "/pages/template/common/css.wxss";

.company{background: #6996ff;padding:40rpx 20rpx 40rpx 20rpx; display: flex;flex-direction: row;justify-content: space-between;}
.company_left{ display: flex;flex-direction: row;}
.company_left .company_logo{ width:120rpx;height:120rpx; }
.company_left .company_info{ display: flex;flex-direction: column;justify-content: center;margin-left: 20rpx; color:#ffffff;font-size: 32rpx; }
.company_right{display: flex;align-items: center;}
.company_right image{width:60rpx;height:60rpx;}


.recommend_content{display: flex;flex-direction: row;justify-content: space-between;
                  background: #ffffff; padding:30rpx 20rpx;border-bottom: solid 2rpx #b1b1b1;}
.recommendlist{display: flex;flex-direction: row;}
.recom{display: flex;flex-direction: row;justify-content: space-between;align-items: center; margin-right: 20rpx;
